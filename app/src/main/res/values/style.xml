<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text.HeadStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:textColor">@color/thick_black</item>
        <item name="android:fontFamily">@font/head_text_font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.BodyStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily">@font/esamanru_otf_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.SplashHeadStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_38</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/hanna_otf</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.SplashSubStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roehoe_chan</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.DataHintStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_35</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:fontFamily">@font/esamanru_otf_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.DataStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:fontFamily">@font/esamanru_otf_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.ScrollText" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@drawable/select_toggle_color</item>
        <item name="android:textColorHighlight">#FFBB00</item>
        <item name="android:fontFamily">@font/esamanru_otf_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <dimen name="text_size_40">40sp</dimen>
    <dimen name="text_size_38">38sp</dimen>
    <dimen name="text_size_35">35sp</dimen>
    <dimen name="text_size_30">30sp</dimen>
    <dimen name="text_size_20">20sp</dimen>
    <dimen name="text_size_15">15sp</dimen>
</resources>